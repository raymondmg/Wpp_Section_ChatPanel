                    //    }, 100);
                    //    setTimeout(function () {
                    //        $('.cx, .cy').addClass('s3');
                    //    }, 200);
                    //}, 150);
                    //$('#chatview').fadeIn();

                });
            });
        })(jQuery);


        /*********************************
        **根据当前用户屏幕进行聊天窗体调整
        **********************************/
        //当窗口大小变化时
        window.onresize = onWindowResize();
        //根据浏览器窗口大小对聊天面板进行设置
        function onWindowResize() {
            var height = (document.body.clientHeight - 181).toString() + "px";
            $("#chat-messages").css("height", height);
        }
    </script>

